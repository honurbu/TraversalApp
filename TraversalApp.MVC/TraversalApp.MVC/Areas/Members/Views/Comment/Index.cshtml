@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Yorumlarım</h1>
<table class="table table-borderless">
    <tr>
        <th>#</th>
        <th>Yorumlarım</th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CommentContent</td>
                </tr>
            }


</table>
