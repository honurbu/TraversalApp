@model List<TraversalApp.Core.DTOs.RoleAssignDto>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Atama Sayfası </h1>

<form method="post">
    @for(int i =0; i<Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].Id"/>
                    <input type="hidden" asp-for="@Model[i].RoleName"/>
                    <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input"/>
                    <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                    <br />
                </div>
            }
    <br />
    <button class="btn btn-outline-success">Değişiklikleri Kaydet</button>
</form>
