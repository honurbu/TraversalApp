@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count > 0)
{

    <table class="table table-borderless">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Rol Güncelle</th>
            <th>Rol Sil</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a href="/Adminss/Role/RemoveRole/@item.Id" class="btn btn-outline-danger">Rol Sil</a></td>
                <td><a href="/Adminss/Role/UpdateRole/@item.Id" class="btn btn-outline-success">Rol Güncelle</a></td>

            </tr>
        }
    </table>
}
else
{
    <div class="alert alert-success">
        <span>Herhangi bir rol bulunamadı !</span>
    </div>
}


<a href="/Adminss/Role/CreateRole" class="btn btn-outline-primary">Yeni Rol Ekle</a>
