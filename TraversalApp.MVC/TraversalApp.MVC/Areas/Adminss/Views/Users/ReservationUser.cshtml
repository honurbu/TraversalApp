@using TraversalApp.Core.Entites
@model List<Reservation>


@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcının Onaylanan Tur Geçmişi</h1>

<table class="table table-inverse">

    <tr>
        <th>#</th>
        <th>Ad - Soyad</th>
        <th>Rota</th>
        <th>Kişi Sayısı</th>
        <th>Tarih</th>
        <th>Detaylar</th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.AppUser.Name @item.AppUser.Surname</td>
            <td>@item.Destination.City</td>
            <td>@item.PersonCount</td>
            <td>@(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
            <td>    <a href="#" class="btn btn-outline-danger">Detaylar</a>    </td>
        </tr>
    }

</table>