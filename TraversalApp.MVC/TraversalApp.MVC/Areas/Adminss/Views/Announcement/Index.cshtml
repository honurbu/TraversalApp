@model List<TraversalApp.Core.DTOs.AnnouncementDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyurular</h1>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Detaylar</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.Title</td>
                    <td>@item.Content</td>
                    <td><a href="#" class="btn btn-outline-success">Detaylar</a></td>
                    <td><a href="/Adminss/Announcement/UpdateAnnouncement/@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
                    <td><a href="/Adminss/Announcement/DeleteAnnouncement/@item.Id" class="btn btn-outline-warning">Sil</a></td>
                </tr>
            }

</table>
    <a href="/Adminss/Announcement/AddAnnouncement" class="btn btn-outline-info"> Yeni Duyuru Oluştur</a>