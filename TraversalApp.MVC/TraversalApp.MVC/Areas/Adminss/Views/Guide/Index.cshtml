@using TraversalApp.Core.Entites
@model List<Guide>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rehberlerimiz</h1>

<table class="table table-flush-spacing">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Ad - Soyad</th>
        <th>Hakkında</th>
        <th>Twitter</th>
        <th>Instagram</th>
        <th>Durumu</th>
        <th>Düzenle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td> <img src="@item.Image" width="40" height="40" class="rounded-circle"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.TwitterURL</td>
            <td>@item.InstagramURL</td>

            @if (@item.Status == true)
            {
                <td><a href="/Adminss/Guide/ChangeToFalse/@item.Id" class="btn btn-outline-warning">Pasifleştir</a></td>
            }
            else
            {
                <td><a href="/Adminss/Guide/ChangeToTrue/@item.Id" class="btn btn-outline-info">Aktifleştir</a></td>
            }
            <td><a href="#" class="btn btn-outline-dark">Rehberi Düzenle</a></td>
        </tr>
    }

</table>

<a href="/Adminss/Guide/AddGuide" class="btn btn-outline-dark">Yeni Rehber Ekle</a>
