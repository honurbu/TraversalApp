@using TraversalApp.Core.Entites
@model IQueryable<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yorum Listesi</h1>

<table class="table table-borderless">

    <tr>
        <th>#</th>
        <th>Kullanıcı Adı</th>
        <th>Rota</th>
        <th>Yorum İçeriği</th>
        <th>Tarih</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.CommentUser</td>
            <td>@item.Destination.City</td>
            <td>@item.CommentContent</td>
            <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Adminss/Comment/DeleteComment/@item.Id" class="btn btn-outline-warning"> Sil </a></td>
        </tr>
    }
</table>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $("div.main-panel div.content-wrapper").css("overflow-x", "auto");
</script>