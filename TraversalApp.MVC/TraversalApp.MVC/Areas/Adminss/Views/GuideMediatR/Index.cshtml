@model List<TraversalApp.MVC.CQRS.Results.GuideResults.GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CQRS MediatR Rehber Listesi</h1>
<table class="table table-borderless">
    <tr>
        <th>#</th>
        <th>İsim</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td><img src="@item.Image" height="50" width="50" /></td>
            <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Adminss/GuideMediatR/GetGuideById/@item.Id" class="btn btn-outline-success">Güncelle</a> </td>
        </tr>
    }

</table>
<a href="/Adminss/GuideMediatR/AddGuide" class="btn btn-outline-info">Yeni Rehber Girişi</a>
